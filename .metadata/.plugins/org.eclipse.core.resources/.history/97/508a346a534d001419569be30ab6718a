package by.pvt.epam.custom.tag;

import java.io.IOException;

import javax.servlet.jsp.JspException;
import javax.servlet.jsp.JspWriter;
import javax.servlet.jsp.tagext.BodyTagSupport;

@SuppressWarnings("serial")
public class LogOutTag extends BodyTagSupport {

	@Override
	public int doStartTag() throws JspException {

		try {
			JspWriter out = pageContext.getOut();
			String form = "<form action=\"controller\" method=\"post\"><input type=\"hidden\" name=\"command\" value=\"logout\" /><input	class=\"button1\" type=\"submit\" value=<fmt:message key=\"option.logout\" /> /></form>";
			out.write(form);
		} catch (IOException e) {
			throw new JspException(e.getMessage());
		}
		return SKIP_BODY;
	}

}
