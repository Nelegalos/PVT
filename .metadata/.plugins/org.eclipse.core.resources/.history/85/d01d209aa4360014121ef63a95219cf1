package by.pvt.resource.main;

import java.util.LinkedList;

import by.pvt.resource.pool.Operator;
import by.pvt.resource.pool.CallCenter;
import by.pvt.resource.pool.Client;

public class Runner {
	public static void main(String[] args) {

		@SuppressWarnings("serial")
		LinkedList<Operator> list = new LinkedList<Operator>() {
			{
				this.add(new Operator(771));
				this.add(new Operator(883));
				this.add(new Operator(550));
				this.add(new Operator(337));
				this.add(new Operator(442));
			}
		};
		
		CallCenter<Operator> pool = new CallCenter<>(list);
		
		for (int i = 0; i < 20; i++) {
			new Client(pool).start();
		}
	}
}